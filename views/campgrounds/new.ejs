<% layout('layouts/boilerplate') %>   
<div class="row">
   <div class="col-6 offset-3">
      <form class="form-group" action="/campgrounds" method="POST">
         <h1>Add New Campground</h1>
         <div class="mb-3">
            <label class="form-label" for="title">Title</label>
            <input class="form-control" type="text" id="title" name="campground[title]">
         </div>
         <div class="mb-3">
            <label class="form-label" for="location">Location</label>
            <input class="form-control" type="text" id="location" name="campground[location]">
         </div>
         <div class="mb-3">
            <label for="image" class="form-label">Image URL</label>
            <input type="text" id="image" class="form-control" name="campground[image]">
         </div>
         <button class="btn btn-success mt-3">Add Campground</button>
      </form>
      <a href="/campgrounds">Back to campgrounds</a>
   </div>
</div>
