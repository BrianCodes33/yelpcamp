<% layout('layouts/boilerplate') %>   
   <h1>Edit Campground</h1>
   <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
      <div>
         <label for="title">Title</label>
         <input for="text" id="title" name="campground[title]" value="<%=campground.title%>"></input>
      </div>
      <div>
         <label for="location">Location</label>
         <input for="text" id="location" name="campground[location]" value="<%=campground.location%>"></input>
      </div>
      <button>Update Campground</button>
   </form>
   <a href="/campgrounds/<%=campground._id %>">Back To Campground</a>
   <footer>
      <a href="/campgrounds/<%=campground._id%>">Edit</a>
      <a href="/campgrounds">All Campgrounds</a>
   </footer>